<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/tv_title_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="106dp"
        android:layout_marginLeft="94dp"
        android:layout_marginRight="94dp"
        android:background="@drawable/logo_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_id_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:text="아이디"
        android:textColor="#000000"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_login" />

    <EditText
        android:id="@+id/et_id_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:hint="아이디를 입력해주세요"
        android:paddingStart="16dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:textSize="12sp"
        android:background="#f3f3f3"
        android:inputType="textEmailSubject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_id_login"
        app:layout_constraintTop_toBottomOf="@+id/tv_id_login" />

    <TextView
        android:id="@+id/tv_pw_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="비밀번호"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/et_id_login"
        app:layout_constraintTop_toBottomOf="@+id/et_id_login" />

    <EditText
        android:id="@+id/et_pw_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingStart="16dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:hint="비밀번호를 입력해주세요"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:background="#f3f3f3"
        app:layout_constraintEnd_toEndOf="@+id/et_id_login"
        app:layout_constraintStart_toStartOf="@+id/tv_pw_login"
        app:layout_constraintTop_toBottomOf="@+id/tv_pw_login" />

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:text="Login"
        android:textColor="#ffd500"
        android:textSize="18sp"
        android:background="@drawable/button"
        app:layout_constraintEnd_toEndOf="@+id/et_pw_login"
        app:layout_constraintStart_toStartOf="@+id/et_pw_login"
        app:layout_constraintTop_toBottomOf="@+id/et_pw_login"
        />

    <TextView
        android:id="@+id/btn_signup_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="134dp"
        android:gravity="center_horizontal"
        android:text="회원가입 하러가기"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_login" />
</androidx.constraintlayout.widget.ConstraintLayout>